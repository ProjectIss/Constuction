@model issDomain.Models.paymentEntry

@{
    ViewBag.Title = "Create";
}

<style>
    .header {
        margin-top: 10px;
        border-top-style: solid;
        border-top-width: 5px;
        border-top-color: #FF5F04;
        font-family: Calibri;
        font-size: 22px;
    }

    .btn-default {
        background-color: #FF5F04;
        color: white;
    }

    input, select, textarea {
        max-width: 500px;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="panel-group">
        <div class="panel panel-heading header">
            Payment Entry - Add Page
        </div>
        <div class="panel panel-body" style="overflow:auto">
            <div class="row">
                <div class="form-group col-md-6">
                    <label>Payment Date</label>
                    @Html.TextBoxFor(m => m.paymenttDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
                <div class="form-group col-md-5">
                    <label>Payment Type</label>
                    @Html.DropDownList("accountLedgerId", null, htmlAttributes: new { @class = "form-control js-example-basic-single", @id = "groupNameID" })
                    @Html.ValidationMessageFor(model => model.accountLedgerId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-5">
                    <label>Project</label>
                    @Html.DropDownList("projectNameId", null, htmlAttributes: new { @class = "form-control js-example-basic-single", @id= "projectNameId" })
                    @Html.ValidationMessageFor(model => model.siteDetails, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label>Site Name</label>
                    @Html.DropDownList("siteDetailsId", null, htmlAttributes: new { @class = "form-control js-example-basic-single", @id= "siteNameId" })
                    @Html.ValidationMessageFor(model => model.siteDetailsId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label>Account Ledger Name</label>
                    @Html.DropDownList("accountLedgerNameId", null, htmlAttributes: new { @class = "form-control js-example-basic-single" })
                    @Html.ValidationMessageFor(model => model.accountLedgerId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label>Given By</label>
                    @Html.EditorFor(model => model.givenBy, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.givenBy, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label>Collected By</label>
                    @Html.EditorFor(model => model.collectBy, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.collectBy, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label>Amount</label>
                    @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label>Remarks</label>
                    @Html.EditorFor(model => model.remarks, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.remarks, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="float:right">

                <input type="submit" value="Submit" class="btn btn-default" />
                @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" })

            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {

        $("#projectNameId").change(function () {
            var pnameId = $(this).find('option:selected').val();
            siteNameId(pnameId);
        })
    });

    
    function siteNameId(pnameId)
    {
              $.ajax({
            type: 'POST',
            url: '@Url.Content("~/paymentEntries/siteNameId")',
            dataType: 'json',
                  data: { site_Name_Id: pnameId },
                  success: function (result) {
                      var data = result;
                      $("#siteNameId").empty();
                      for (var i = 0; i < data.length; i++)
                      {
                          $("#siteNameId").append("<option value='" + data[i].ID + "'>" + data[i].SiteName + "</option>");
                }
            },
            error: function (err) {
                console.log(err);
            }
        });
    };
    $(document).ready(function () {
        $('.js-example-basic-single').select2();
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

