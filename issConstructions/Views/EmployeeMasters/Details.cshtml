@model issDomain.Models.EmployeeMaster

@{
    ViewBag.Title = "Details";
}

<style>
    #AccountGroupMaster {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    .btn-default {
        background-color: #FF5F04;
        color: white;
    }

    #AccountGroupMaster td, #customers th {
        border: 1px solid #ddd;
        padding: 8px;
    }

    #AccountGroupMaster tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    #AccountGroupMaster tr:hover {
        background-color: #ddd;
    }

    #AccountGroupMaster th {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
    }

    #btn-edit a:hover {
        text-decoration: none;
        color: black;
    }

    #btn-edit a {
        text-decoration: none;
        color: black;
    }

    .header {
        margin-top: 10px;
        border-top-style: solid;
        border-top-width: 5px;
        border-top-color: #FF5F04;
        font-family: Calibri;
        font-size: 22px;
    }
</style>

<div class="panel-group">
    <div class="panel panel-heading header">
        Employee -  Details Page
    </div>
    <div class="panel panel-body">

        <table id="AccountGroupMaster">
            <tr>
                <th>Employee Name</th>
                <td>  @Html.DisplayFor(model => model.name)</td>
            </tr>

            <tr>
                <th>Address</th>
                <td>  @Html.DisplayFor(model => model.address)</td>
            </tr>

            <tr>
                <th> Mobile No</th>
                <td>   @Html.DisplayFor(model => model.Mobilenumber)</td>
            </tr>
            <tr>
                <th> Email ID</th>
                <td>   @Html.DisplayFor(model => model.Emailid)</td>
            </tr>
            <tr>
                <th> Designation</th>
                <td>   @Html.DisplayFor(model => model.Designation)</td>
            </tr>
            <tr>
                <th> Category</th>
                <td>   @Html.DisplayFor(model => model.Category)</td>
            </tr>
            <tr>
                <th> Date of Join</th>
                <td>   @Html.DisplayFor(model => model.DateofJoin)</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>   @Html.DisplayFor(model => model.Status)</td>
            </tr>
            <tr>
                <th>Date of Relieve</th>
                <td>   @Html.DisplayFor(model => model.DateofRelive)</td>
            </tr>
            <tr>
                <th>Salary Type</th>
                <td>   @Html.DisplayFor(model => model.SalaryType)</td>
            </tr>
            <tr>
                <th>Salary Amount</th>
                <td>   @Html.DisplayFor(model => model.SalaryAmount)</td>
            </tr>
            <tr>
                <th>Create Date</th>
                <td>   @Html.DisplayFor(model => model.CreatedDate)</td>
            </tr>
            <tr>
                <th> Updated By</th>
                <td>  @Html.DisplayFor(model => model.UpdateBy)</td>
            </tr>
            <tr>
                <th> Updated  Date</th>
                <td>  @Html.DisplayFor(model => model.UpdatedDate)</td>
            </tr>

        </table>

        <p style="float:right;">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, htmlAttributes: new { @class = "btn btn-default" })
            @*<button type="button" class = "btn btn-default" id="btn-edit"> @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) </button>*@
            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
        </p>

    </div>




</div>

