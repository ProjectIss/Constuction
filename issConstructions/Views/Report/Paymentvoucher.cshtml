@model IEnumerable<issDomain.Models.paymentEntry>

@{
    ViewBag.Title = "Paymentvoucher";
}

<style>
    body {
        width: 100%;
        height: 100%;
        background-color: green;
        position: absolute!important;
    }

    #container {
        width: inherit;
        height: inherit;
        background-color: white;
        position: static;
        
    }
    .line1 {

        border: 0.5px solid black;
        width:1100px;
    }
    .line2 {
        border: 0.5px solid black;
        width: 1100px;
    }
    label
    {
        font-family:Cambria;
        font-size:14px;
        margin-left:20px;

    }
    #print {
        background-color: #ff5f04;
        width: 15%;
        height:20%;
        color:white;
    }
        #print:hover {
            background-color: white;
            color: #ff5f04;
        }
</style>
<body>
    <br />
    <div class="card">
        <button class="btn-default" id="print" style="float:right;margin-top:0%">
            Print
        </button>
    </div>
    <br /> <br />
    <div id="container">
        <div class="row" style="margin-left:20px">
            <div class="row">
                <h3 style="text-align:center;color:orangered">Payment Voucher</h3>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Vocher No</label>
                    <label>:</label>
                </div>
                <div class="col-md-9">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Site Code</label>
                    <label>:</label>
                </div>
                <div class="col-md-6">
                </div>
                <div class="col-md-3">
                    <label>Date</label>
                    <label>:</label>
                    <label id="paymenttDate"></label>
                </div>
            </div>

            <hr class="line1" />
            <!---Project Name-->
            <div class="row">
                <div class="col-md-4">
                    <label>Project Name</label>
                    <label id="projectNameId">:</label>
                </div>
                <div class="col-lg-3"></div>
                <div class="col-md-2">
                    <label id="amount">Amount Paid</label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Payment To</label>
                    <label>:</label>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <label>On Account of</label>
                    <label id="groupNameID">:</label>
                </div>
            </div>
            <hr class="line2" />
            <!--Signature Part-->
            <div class="row"><div class="col-lg-3"><label></label></div></div>
            <div class="row"><div class="col-lg-3"><label></label></div></div>
            <div class="row"><div class="col-lg-3"><label></label></div></div>
            <div class="row"><div class="col-lg-3"><label></label></div></div>
            <div class="row">
                <div class="col-lg-3">
                    <label>xxxx</label>
                </div>
                <div class="col-lg-3">
                    <label>yyyyy</label>
                </div>
                <div class="col-lg-3">
                    <label id="givenBy"></label>
                </div>
                <div class="col-lg-3">
                    <label id="collectBy"></label>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <label>Prepared By</label>
                    <label>:</label>
                    <labe></labe>
                </div>
                <div class="col-lg-3">
                    <label>Approved By</label>
                    <label>:</label>
                    <label></label>
                </div>
                <div class="col-lg-3">
                    <label>Given By</label>
                    <label>:</label>
                    <label></label>
                </div>
                <div class="col-lg-3">
                    <label>Received By</label>
                    <label>:</label>
                    <label></label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Remarks</label>
                    <label>:</label>
                </div>
            </div>

        </div>
    </div>

</body>
<script>
    $(function () {
        loadData();
        $('#print').click(function ()
        {
            $(this).hide();
            $('footer').hide();
            window.print();
            $(this).show();
            $('footer').show();

        });
    });

    function loadData() {
        let id =@ViewBag.Id;
      
        $.ajax({
           type: 'POST',
           url: '@Url.Content("~/Report/Paymentvoucher")',
            dataType: 'json',
            data: { id: id },
            success: function (data) {
                $("#paymenttDate").val();
                $("#projectNameId").val();
                $("#amount").val();
                $("#groupNameID").val();
                $("#givenBy").val();
                $("#collectBy").val();
           },
           error: function (err) {
               console.log(err);
           }
       });
    }
</script>
